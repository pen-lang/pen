True = \(x boolean) none | error {
  if x {
    none
  } else {
    error("condition is false")
  }
}

Error = \(x any) none | error {
  if x = x as error {
    none
  } else {
    error("error expected")
  }
}

Fail = \() error {
  error("assertion failed")
}

EqualNumbers = \(x number, y number) none | error {
  if x == y {
    none
  } else {
    error("numbers are not equal")
  }
}

EqualStrings = \(x string, y string) none | error {
  if x == y {
    none
  } else {
    error("strings are not equal")
  }
}
