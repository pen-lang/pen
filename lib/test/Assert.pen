# This module provides a collection of assertion logic for testing.

# Assert that a condition is true.
True = \(x boolean) none | error {
  if x {
    none
  } else {
    error("condition is not true")
  }
}

# Fail with an error immediately.
# This function is useful to make unreachable codes fail.
Fail = \() error {
  error("assertion failed")
}

# Check if numbers are equal.
EqualNumbers = \(x number, y number) none | error {
  if x == y {
    none
  } else {
    error("numbers are not equal")
  }
}

# Check if strings are equal.
EqualStrings = \(x string, y string) none | error {
  if x == y {
    none
  } else {
    error("strings are not equal")
  }
}
