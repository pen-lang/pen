type boxAny {
  value any
}

type firstRest {
  ok boolean
  first \() any
  rest [any]
}

foreign "c" _pen_ffi_list_create = \() [any] {
  [any]
}

foreign "c" _pen_ffi_list_prepend = \(x boxAny, xs [any]) [any] {
  [any x.value, ...xs]
}

foreign _pen_ffi_list_first_rest = \(xs [any]) firstRest {
  if [x, ...xs] = xs {
    firstRest{ok: true, first: x, rest: xs}
  } else {
    firstRest{ok: false, first: \() any { none }, rest: [any]}
  }
}
